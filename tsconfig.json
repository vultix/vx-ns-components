{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "dist/out-tsc",
    "declaration": true,
    "declarationDir": "dist/out-tsc",
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ]
  },
  "exclude": ["node_modules", "dist", "**/*.ngfactory.ts", "**/*.shim.ts", "**/*.spec.ts"],
  "include": [
    "**/*.ts"
  ]
}